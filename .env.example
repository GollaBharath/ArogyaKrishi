# ArogyaKrishi Backend Configuration
# Copy this file to .env and configure with your local PostgreSQL instance

# Database Configuration
# PostgreSQL connection URL format:
# postgresql+psycopg://username:password@host:port/database
DATABASE_URL=postgresql+psycopg://arogya_user:arogya_password@localhost:5432/arogya_krishi

# Application Settings
APP_DEBUG=False
APP_NAME="ArogyaKrishi Backend"
APP_VERSION="0.1.0"

# CORS Configuration
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://127.0.0.1,http://127.0.0.1:3000,http://localhost:8000,http://localhost:8001

# Image Upload Settings
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png

# ML Model Configuration
USE_MOCK_INFERENCE=True
CONFIDENCE_THRESHOLD=0.5
# MODEL_PATH=/path/to/model  # Uncomment when using real model

# LLM Integration (Optional)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
